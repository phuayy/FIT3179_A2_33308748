{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A radar chart for s0m's VCT 2025 performance.",
  "width": 300,
  "height": 300,
  "padding": 40,
  "background": "#111823",
  "autosize": {"type": "none", "contains": "padding"},
  "signals": [
    {"name": "radius", "update": "width / 2.5"}
  ],
  "data": [
    {
      "name": "full_data",
      "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/nrg_player_stats_radar_v2.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "table",
      "source": "full_data",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.player == 'brawk'"
        }
      ]
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["stat_name"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {
        "data": "table",
        "field": "stat_name",
        "sort": {"field": "order"}
      },
      "sort": true
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": [0, 100]
    }
  ],
  "encode": {
    "enter": {
      "x": {"signal": "width / 2"},
      "y": {"signal": "height / 2"}
    }
  },
  "marks": [
    {
      "type": "line",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"signal": "scale('radial', datum.normalized_value) * cos(scale('angular', datum.stat_name))"},
          "y": {"signal": "scale('radial', datum.normalized_value) * sin(scale('angular', datum.stat_name))"},
          "stroke": {"value": "#FF4655"},
          "strokeWidth": {"value": 2},
          "fill": {"value": "#FF4655"},
          "fillOpacity": {"value": 0.2}
        }
      }
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.stat_name))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.stat_name))"},
          "stroke": {"value": "#555555"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "keys"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 10) * cos(scale('angular', datum.stat_name))"},
          "y": {"signal": "(radius + 10) * sin(scale('angular', datum.stat_name))"},
          "text": {"field": "stat_name"},
          "align": [
            {
              "test": "abs(scale('angular', datum.stat_name)) > PI / 2",
              "value": "right"
            },
            {"value": "left"}
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.stat_name) > 0.1",
              "value": "top"
            },
            {
              "test": "scale('angular', datum.stat_name) < -0.1",
              "value": "bottom"
            },
            {"value": "middle"}
          ],
          "fill": {"value": "white"},
          "fontWeight": {"value": "normal"}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "#555555"},
          "strokeWidth": {"value": 1}
        }
      }
    }
  ]
}