{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "VCT Champions 2025 Players by Country (%)",
    "color": "#FFFFFF",
    "anchor": "middle"
  },
  "width": "container",
  "height": 520,
  "background": "#111823",
  "projection": {"type": "naturalEarth1"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/output%20(1).json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#333333",
        "stroke": "#777777",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/output%20(1).json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/valorant_player_percentages.csv"},
            "key": "CountryPrimary",
            "fields": ["Players", "Percentage"]
          }
        },
        {
          "filter": "datum.Percentage > 0"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Player Percentage",
          "scale": {
            "scheme": "reds"
          },
          "legend": {
            "titleColor": "#FFFFFF",
            "labelColor": "#FFFFFF",
            "format": ".1f"
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Players",
            "type": "quantitative",
            "title": "Number of Players",
            "format": ".0f"
          },
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage of Total",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/output%20(1).json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#444444",
        "strokeWidth": 0.5
      }
    }
  ]
}