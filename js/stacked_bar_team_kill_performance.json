{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Stacked bar chart showing multi-kill distribution by team.",
  "width": "container",
  "height": 400,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/performance_data.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "aggregate": [
        {"op": "sum", "field": "2K", "as": "sum_2K"},
        {"op": "sum", "field": "3K", "as": "sum_3K"},
        {"op": "sum", "field": "4K", "as": "sum_4K"},
        {"op": "sum", "field": "5K", "as": "sum_5K"}
      ],
      "groupby": ["Team"]
    },
    {
      "fold": ["sum_2K", "sum_3K", "sum_4K", "sum_5K"],
      "as": ["Kill Type", "Count"]
    },
    {
      "calculate": "replace(datum['Kill Type'], 'sum_', '')",
      "as": "Kill Type Label"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Team",
      "type": "nominal",
      "title": "Team",
      "axis": {"labelAngle": -45},
      "sort": {
        "op": "sum",
        "field": "Count",
        "order": "descending"
      }
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Total Multi-Kills"
    },
    "color": {
      "field": "Kill Type Label",
      "type": "nominal",
      "title": "Kill Type",
      "scale": {"scheme": "category10"},
      "legend": {"orient": "top"}
    },
    "order": {
      "field": "Kill Type Label",
      "sort": "descending"
    },
    "tooltip": [
      {"field": "Team", "type": "nominal"},
      {"field": "Kill Type Label", "type": "nominal", "title": "Kill Type"},
      {"field": "Count", "type": "quantitative", "title": "Count"}
    ]
  },
  "config": {
    "axis": {"labelColor": "white", "titleColor": "white", "gridColor": "#555"},
    "legend": {"labelColor": "white", "titleColor": "white"}
  }
}