{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A radar chart comparing player performance.",
  "width": 450,
  "height": 300,
  "padding": {
    "top": 0,
    "right": 72,
    "bottom": 0,
    "left": 80
  },
  "background": "transparent",
  "autosize": {"type": "none", "contains": "padding"},
  "signals": [
    {"name": "radius", "update": "width / 2.5"},
    {
      "name": "select_s0m",
      "init": false,
      "bind": {"input": "checkbox", "name": "s0m"}
    },
    {
      "name": "select_Ethan",
      "init": false,
      "bind": {"input": "checkbox", "name": "Ethan"}
    },
    {
      "name": "select_mada",
      "init": false,
      "bind": {"input": "checkbox", "name": "mada"}
    },
    {
      "name": "select_brawk",
      "init": false,
      "bind": {"input": "checkbox", "name": "brawk"}
    },
    {
      "name": "select_skuba",
      "init": false,
      "bind": {"input": "checkbox", "name": "skuba"}
    }
  ],
  "data": [
    {
      "name": "full_data",
      "url": "https://raw.githubusercontent.com/phuayy/FIT3179_A2_33308748/refs/heads/main/data/nrg_player_stats_radar_v2.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "table",
      "source": "full_data",
      "transform": [
        {
          "type": "filter",
          "expr": "(select_s0m && datum.player == 's0m') || (select_Ethan && datum.player == 'Ethan') || (select_mada && datum.player == 'mada') || (select_brawk && datum.player == 'brawk') || (select_skuba && datum.player == 'skuba')"
        }
      ]
    },
    {
      "name": "keys",
      "source": "full_data",
      "transform": [{"type": "aggregate", "groupby": ["stat_name"]}]
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "full_data", "field": "stat_name"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": [0, 100]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "full_data", "field": "player"},
      "range": [
        "#4c78a8",
        "#f58518",
        "#e45756",
        "#FF007F",
        "#b279a2"
      ]
    }
  ],
  "encode": {
    "enter": {
      "x": {"signal": "width / 2"},
      "y": {"signal": "height / 2"}
    }
  },
  "legends": [
    {"stroke": "color", "title": "Players", "symbolType": "stroke", "direction": "vertical", "orient": "right"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {"name": "series", "data": "table", "groupby": "player"}
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.normalized_value) * cos(scale('angular', datum.stat_name))"},
              "y": {"signal": "scale('radial', datum.normalized_value) * sin(scale('angular', datum.stat_name))"},
              "stroke": {"scale": "color", "field": "player"},
              "strokeWidth": {"value": 2},
              "fill": {"scale": "color", "field": "player"},
              "fillOpacity": {"value": 0.15},
              "tooltip": {
                "signal": "{'Player': datum.player, 'Stat': datum.stat_name, 'Value': format(datum.original_value, '.2f')}"
              }
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "from": {"data": "keys"},
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.stat_name))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.stat_name))"},
          "stroke": {"value": "#555"}, "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "keys"},
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 15) * cos(scale('angular', datum.stat_name))"},
          "y": {"signal": "(radius + 15) * sin(scale('angular', datum.stat_name))"},
          "text": {"field": "stat_name"},
          "align": {
            "signal": "abs(scale('angular', datum.stat_name)) > PI / 2 ? 'right' : 'left'"
          },
          "baseline": {
            "signal": "scale('angular', datum.stat_name) > 0.1 ? 'top' : scale('angular', datum.stat_name) < -0.1 ? 'bottom' : 'middle'"
          },
          "fill": {"value": "white"}, "fontWeight": {"value": "normal"}
        }
      }
    },
    {
      "type": "line",
      "from": {"data": "keys"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"signal": "radius * cos(scale('angular', datum.stat_name))"},
          "y": {"signal": "radius * sin(scale('angular', datum.stat_name))"},
          "stroke": {"value": "#555"}, "strokeWidth": {"value": 1}
        }
      }
    }
  ]
}